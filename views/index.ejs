<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Document</title>
</head>
<body>
  <!-- Container for the main content -->
  <div class="container">
    <h1>URL Shrinker</h1>
    <!-- Form to submit a new URL -->
    <form action="/shortUrls" method="POST" class="my-4 form-inline">
      <label for="fullUrl" class="sr-only">Url</label>
      <!-- Input field to enter the full URL -->
      <input required placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
      <!-- Button to submit the form -->
      <button class="btn btn-success" type="submit">Shrink</button>
    </form>
    
    <!-- Table to display the list of shortened URLs -->
    <table class="table table-striped table-responsive">
      <thead>
        <!-- Table header -->
        <tr>
          <th>Full URL</th> <!-- Column for the original (full) URL -->
          <th>Short URL</th> <!-- Column for the shortened URL -->
          <th>Clicks</th> <!-- Column for the number of clicks on the shortened URL -->
        </tr>
      </thead>
      <tbody>
        <!-- Loop through each shortUrl object passed from the server -->
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <!-- Display the full URL as a clickable link -->
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <!-- Display the short URL as a clickable link -->
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <!-- Display the number of clicks on the short URL -->
            <td><%= shortUrl.clicks %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>